                                <div class="panel-body">
                                    <div class="table">
                                        <!--Search function here-->
                                        <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
                                        <script type="text/javascript">
                                            $(document).ready(function () {
                                                var $cells = $("td");

                                                $("#search").keyup(function () {
                                                    var val = $.trim(this.value).toLowerCase();
                                                    if (val === "")
                                                        $cells.parent().show();
                                                    else {
                                                        $cells.parent().hide();
                                                        $cells.filter(function () {
                                                            return -1 != $(this).text().toLowerCase().indexOf(val);
                                                        }).parent().show();
                                                    }
                                                });
                                            });
                                        </script>
                                        <div class="container">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                                    <input type="text" class="form-control" style="max-width:500px;" name="search" id="search" placeholder="Search" />
                                                </div>
                                            </div>
                                        </div>
                                        @if (disbursements.Count() == 0)
                                        {
                                            <p>There is no disbursement to be made.</p>
                                        }
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Dept Code</th>
                                                    <th>Representative</th>
                                                    <th>Collection Point</th>
                                                    <th class="text-center">Acknowledge Disbursement</th>
                                                    <th class="text-center">Cancel Disbursement</th>
                                                </tr>
                                            </thead><!--/thead-->
                                            <tbody>
                                                @foreach (var req in disbursements)
                                                {
                                                    <tr>
                                                        <td>@req.reqformNumber</td>
                                                        <td>@req.department</td>
                                                        <td>@departments.Where(x => x.id == @req.department).FirstOrDefault().representative</td>
                                                        <td>@departments.Where(x => x.id == @req.department).FirstOrDefault().collectionName</td>
                                                        <td class="text-center">
                                                            <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#@req.reqformNumber-myModal">Confirm</button>
                                                            @using (Html.BeginForm("Acknowledge", "Store", FormMethod.Post))
                                                            {
                                                                <input type="hidden" id="reqNumber" name="reqNumber" value="@req.reqformNumber" />
                                                                <input type="hidden" id="sessionId" name="sessionId" value="@sessionId" />
                                                                <input type="hidden" id="command" name="command" value="acknowledge" />
                                                                <div class="modal fade" id="@req.reqformNumber-myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                                    <div class="modal-dialog modal-lg">
                                                                        <div class="modal-content text-left">
                                                                            <div class="modal-header">
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                                <h4 class="modal-title" id="gridSystemModalLabel">Requisition Details</h4>
                                                                                <h5>Requested By: @req.Employee.empName</h5>
                                                                                <h5>Requisition Number: @req.reqformNumber</h5>
                                                                                <h5>Requisition Approved: @req.dateapproved</h5>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <hr>
                                                                                <table width="700px">
                                                                                    <tr>
                                                                                        <th><u>Item Name</u></th>
                                                                                        <th style="text-align:center"><u>Requested Quantity</u></th>
                                                                                        <th style="text-align:center"><u>Actual Received Quantity</u></th>
                                                                                        <th><u>UOM</u></th>
                                                                                    </tr>
                                                                                    @foreach (var item in req.productReqs)
                                                                                    {
                                                                                        <tr>
                                                                                            <td>@item.productDesc</td>
                                                                                            <td style="text-align:center">@item.quantity</td>
                                                                                            <td class="add-plus-input" align="center">
                                                                                                <span class="glyphicon glyphicon-minus" onclick="sub(this)" id="@item.productitemnumber"></span>
                                                                                                <input style="text-align:center" name="@item.productitemnumber-confirmqty" id="@item.productitemnumber-confirmqty" type="number" value="@item.retrievedQuantity" />
                                                                                                <span class="glyphicon glyphicon-plus" onclick="add(this)" id="@item.productitemnumber"></span>
                                                                                            </td>
                                                                                            <td>@item.unitOfMeasure</td>
                                                                                        </tr>
                                                                                    }
                                                                                </table>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                                                                                <button type="submit" class="btn btn-primary">Confirm</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                            </td>
                                                        <td class="text-center">
                                                        <a href="~/Store/Acknowledge?command=cancel&reqNumber=@req.reqformNumber&sessionId=@sessionId" onclick="return confirm('Are you sure you want to Cancel the disbursement?')">
                                                            <button type="button" class="btn btn-default btn-sm">Cancel</button>
                                                        </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody><!--/tbody-->
