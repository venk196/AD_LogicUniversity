                                                    <tr>
                                                        <th style="display:none;">Id</th>
                                                        <th>Supplier Code</th>
                                                        <th>Supplier Name</th>
                                                        <th>GST Registration No. </th>
                                                        <th>Contact Name</th>
                                                        <th>Phone No.</th>
                                                        <th>Fax No.</th>
                                                        <th>Address</th>
