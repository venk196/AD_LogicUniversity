            <div class="page-inner">
                <div class="page-title">
                    <h3 class="breadcrumb-header">Create Stationery Requisition</h3>
                </div>

                <div id="main-wrapper">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-white">
                                <div class="panel-heading clearfix">
                                </div>
                                <div class="panel-body">
                                    <div class="table">
                                        @using (Html.BeginForm("Products", "Request", FormMethod.Post))
                                        {
                                            <input type="hidden" name="sessionId" id="sessionId" value="@sessionId" />
                                            if (msg != null)
                                            {
                                                <p style="color:red; margin-left:200px;">@msg</p>
                                            }
                                            <!--Search function here-->
                                            <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
                                            <script type="text/javascript">
                                                $(document).ready(function () {
                                                    var $cells = $("td");

                                                    $("#search").keyup(function () {
                                                        var val = $.trim(this.value).toLowerCase();
                                                        if (val === "")
                                                            $cells.parent().show();
                                                        else {
                                                            $cells.parent().hide();
                                                            $cells.filter(function () {
                                                                return -1 != $(this).text().toLowerCase().indexOf(val);
                                                            }).parent().show();
                                                        }
                                                    });
                                                });
                                            </script>
                                            <div class="">
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                                        <input type="text" class="form-control" style="max-width:500px;" name="search" id="search" placeholder="Search" />
                                                       <div align="right"><button style="margin-left:15%" type="submit" class="btn btn-primary">Submit Selected Items</button></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <table id="suppliertable" class="display table" style="width: 100%">

                                                <thead>
                                                    <tr>
                                                        <th>Item Code</th>
                                                        <th>Category</th>
                                                        <th>Item Name</th>
                                                        <th>Select Item</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var product in Model)
                                                    {
                                                        <tr>
                                                            <td>@product.itemNumber</td>
                                                            <td>@product.category</td>
                                                            <td>@product.description</td>
                                                            <td><input type="checkbox" class="checkbox" value="@product.itemNumber" name="selectedProducts" /></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>

                                            <p align="right"><button type="submit" class="btn btn-primary">Submit Selected Items</button></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div><!-- Row -->
                </div><!-- Main Wrapper -->
                <div class="page-footer">
                    <p>SA48 Team 10</p>
                </div>
