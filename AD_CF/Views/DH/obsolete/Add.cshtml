    @using (Html.BeginForm("CreateDelegation", "DH", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>For Managers Only</h4>
        <hr />

        <table class="form-group">
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
            </tr>
            @foreach (var emp in emps)
            {
                <tr>
                    <td>@emp.id</td>
                    <td>@emp.empName</td>
                </tr>
            }

        </table>

        <table class="form-group">
            <tr>
                <td colspan="80">
                    Delegate To:
                </td>
                <td colspan="80" , align="left">
                    <select id="employeeName" name="employeeName">
                        @foreach (var emp in emps)
                        {
                            <option value="@emp.empName">@emp.empName</option>

                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="80">
                    Start Date:
                </td>
                <td colspan="80" , align="left">
                    @Html.TextBoxFor(x => d.startDate)
                </td>
            </tr>
            <tr>
                <td colspan="80">
                    End Date:
                </td>
                <td colspan="80" , align="left">
                    @Html.TextBoxFor(x => d.endDate)
                    
                </td>
            </tr>
            <tr>
                <td colspan="160" , align="right">
                    <input type="submit" value="Confirm" class="btn btn-default" />
                    <input type="hidden" name="sessionid" id="sessionid" value="@sessionid" />
                </td>
            </tr>
        </table>

