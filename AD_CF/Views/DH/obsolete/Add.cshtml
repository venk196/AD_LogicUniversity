@using AD_CF.Models

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var d = (Delegation)ViewData["d"];
    List<Employee> emps = (List<Employee>)ViewData["emps"];
    string sessionid = (string)ViewData["sessionid"];
}

<h2>DELEGATION PAGE</h2>
