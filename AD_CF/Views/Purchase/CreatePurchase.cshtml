            var supplierName = d.value
            //var supplierName = document.getElementById(itemNo)[0].value;
            console.log(supplierName)
            var nametag = `${itemNo}`
            console.log(nametag)
            var quantity = document.getElementsByName(nametag)[0].value;

            $.ajax({
                url: `/item/index?itemNo=${itemNo}&supplierName=${supplierName}`,
                type: "GET",
                contentType: "application/json",
                success: function (data, textStatus, xhr) {
                    console.log(data)
                    var tagId = `${data.itemNo}-pricetag`
                    console.log(tagId)
                    document.getElementById(tagId).innerHTML = data.price
                    var total = `${data.itemNo}-total`
                    console.log(quantity)
                    var totalprice = data.price * quantity;
                    totalprice = Number(totalprice);
                    totalprice = totalprice * 100;
                    totalprice = Math.round(totalprice);
                    totalprice = totalprice / 100;
                    document.getElementById(total).innerHTML = (Number(totalprice))
                    //document.getElementById(total).innerHTML = (Number(data.price) * Number(quantity))

                }
            })
        }

        function quantityChange(d) {
            console.log("bbb")
            var itemNo = d.name
            console.log(itemNo)
            console.log(document.getElementsByName(itemNo)[0].value)
            var quantity = document.getElementsByName(itemNo)[0].value
            console.log(quantity)
            var tagId = itemNo + "-pricetag"
            console.log(tagId)
            console.log(document.getElementById(tagId).innerHTML)
            var price = document.getElementById(tagId).innerHTML
            var total = itemNo + "-total"
            var totalprice = price * quantity;
            totalprice = Number(totalprice);
            totalprice = totalprice * 100;
            totalprice = Math.round(totalprice);
            totalprice = totalprice / 100;
            document.getElementById(total).innerHTML = (Number(totalprice))

        }
    </script>

    <script type="text/javascript">
        function add(d) {
            var itemNo = d.id
            var quantity = itemNo + "-quantity"
            console.log(quantity)
            var num = parseInt(document.getElementById(quantity).value);
            if (num < 1000)
                document.getElementById(quantity).value = num + 1;
            var total = itemNo + "-total"
            var tagId = itemNo + "-pricetag"
            var price = document.getElementById(tagId).innerHTML
            console.log(price)
            console.log(num)
            var totalprice = price * (num + 1);
            totalprice = Number(totalprice);
            totalprice = totalprice * 100;
            totalprice = Math.round(totalprice);
            totalprice = totalprice / 100;
            console.log(totalprice)
            document.getElementById(total).innerHTML = (Number(totalprice))
        }
        function sub(d) {
            var itemNo = d.id
            var quantity = itemNo + "-quantity"
            console.log(quantity)
            var num = document.getElementById(quantity).value;
            if (num != 0)
                document.getElementById(quantity).value = num - 1;
            var total = itemNo + "-total"
            var tagId = itemNo + "-pricetag"
            var price = document.getElementById(tagId).innerHTML
            var totalprice = price * (num - 1)
            totalprice = Number(totalprice);
            totalprice = totalprice * 100;
            totalprice = Math.round(totalprice);
            totalprice = totalprice / 100;
            console.log(price)
            document.getElementById(total).innerHTML = (Number(totalprice))
        }
    </script>
